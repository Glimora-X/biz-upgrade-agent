{
  "name": "biz-upgrade-helper",
  "displayName": "biz框架升级助手: 从 biz-framework 到 biz-core",
  "description": "app-service 升级助手，帮助开发者平滑过渡到app-service-plus",
  "version": "8.0.0",
  "publisher": "GlimoraX",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Glimora-X/biz-upgrade-agent.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "upgrade",
    "biz-framework",
    "biz-core"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:svelte"
  ],
  "main": "./dist/Main.js",
  "contributes": {
    "commands": [
      {
        "command": "bizHelper.resumeQuickUpgrade",
        "title": "继续升级流程",
        "category": "Biz Helper",
        "icon": "$(debug-continue)"
      },
      {
        "command": "bizHelper.quickUpgrade",
        "title": "一键代码升级",
        "category": "Biz Helper",
        "icon": "$(rocket)"
      }
      
    ],
    "configuration": {
      "title": "Biz Framework Upgrade",
      "properties": {
        "bizFrameworkUpgrade.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用/禁用升级助手"
        },
        "bizFrameworkUpgrade.autoScan": {
          "type": "boolean",
          "default": true,
          "description": "自动扫描打开的文件"
        },
        "bizFrameworkUpgrade.showDashboardOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "启动时显示升级仪表板"
        },
        "bizFrameworkUpgrade.rulePaths": {
          "type": "array",
          "default": [
            ".upgrade/rules.json",
            "upgrade.config.json"
          ],
          "description": "规则文件路径"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "bizHelper.quickUpgrade",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "bizHelper.resumeQuickUpgrade",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "minimatch": "^9.0.0"
  }
}